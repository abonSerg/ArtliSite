@model ArtliSite.Models.ContactModel
@{
    ViewBag.Title = "Contact";
}
<div class="cx-bradcaump-area sbg-4" data-black-overlay="5">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="bradcaump-wrap text-center">
                    <h2 class="bradcaump-title">CONTACT US</h2>
                    <nav class="bradcaump-inner">
                        <a class="breadcrumb-item" href="index.html">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb-item active">CONTACT US</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start contact area -->
<div class="our-contact-form-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
                <div class="cx-address-wrap cx-address-wrap-2">
                    <div class="single-address single-address-2">
                        <div class="address-icon">
                            <i class="icofont icofont-social-skype"></i>
                        </div>
                        <div class="single-address-right">
                            <h4>Skype Us</h4>
                            <p>artlisoft.info</p>
                        </div>
                    </div>
                    <div class="single-address single-address-2">
                        <div class="address-icon">
                            <i class="icofont icofont-envelope"></i>
                        </div>
                        <div class="single-address-right">
                            <h4>Your Message</h4>
                            <p><a href="mailto:info@artlisoft.com">info@artlisoft.com</a></p>
                        </div>
                    </div>
                    <div class="single-address single-address-2">
                        <div class="address-icon">
                            <i class="icofont icofont-location-pin"></i>
                        </div>
                        <div class="single-address-right">
                            <h4>Our location</h4>
                            <p>1, Sportivnaya Sq<br>Kyiv, Ukraine, 01001</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Start latest contact area -->
            <div class="col-md-8 col-lg-8 col-sm-8 col-xs-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title text-left">
                            <h2 class="title-line">leave a message</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="cx-contact-form add-account">
                        <form asp-antiforgery="true" asp-action="Contact" asp-controller="Home" method="POST" role="form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="cx-input-group clearfix mb-50">
                                <div class="single-cmnt-input name one-half mb-30 left">
                                    <input asp-for="Name" name="Name" type="text" class="grey-color" placeholder="Name">
                                </div>
                                <div class="single-cmnt-input email one-half right">
                                    <input asp-for="Email" name="Email" type="email" class="grey-color" placeholder="Email">
                                </div>
                            </div>
                            <div class="single-cmnt-input subject mb-50">
                                <input asp-for="Subject" name="Subject" type="text" class="grey-color" placeholder="Subject">
                            </div>
                            <div class="single-cmnt-input message mb-60 xsmb-40">
                                <textarea asp-for="Message" name="Message" class="grey-color" placeholder="Message"></textarea>
                            </div>
                            <div class="single-cmnt-input text-left">
                                <input type="submit" value="send message" class="cx-btn">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End latest contact area -->    
        </div>
    </div>
</div>
<!-- End contact area -->
